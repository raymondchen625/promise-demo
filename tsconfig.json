{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false
  },
  "filesGlob": [
    "./**/*.ts",
    "./test/**/*.ts",
    "!./node_modules/**/*.ts",
    "!./tmp/*.ts"
  ],
  "compileOnSave": true,
  "buildOnSave": true,
  "atom": { "rewriteTsconfig": false },
  "exclude": [
    "typings/main.d.ts",
    "typings/main",
    "node_modules",
    "tmp"
  ]
}
